@model Car
<div class="row justify-content-center ">
	<form method="post" class="col-6">
		<div class="form-group">
			<label asp-for="Make"></label>
			<input class="form-control" asp-for="Make" />
			<span asp-for="Make"></span>
		</div>
		<div class="form-group">
			<label asp-for="Model"></label>
			<input class="form-control" asp-for="Model" />
			<span asp-for="Model"></span>
		</div>
		<div class="form-group">
			<label asp-for="Year"></label>
			<input class="form-control" asp-for="Year" />
			<span asp-for="Year"></span>
		</div>
		<div class="form-group">
			<label asp-for="Color"></label>
			<input class="form-control" asp-for="Color" />
			<span asp-for="Color"></span>
		</div>
		<button class="btn btn-primary">Submit</button>
	</form>
</div>
