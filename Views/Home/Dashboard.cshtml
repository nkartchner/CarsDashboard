@model DashboardViewModel
<div class="row">
	<h1>Welcome to the Dashboard @Model.User.FirstName >:)</h1>
</div>
<div class="row mb-4">
	<small>Where all your dreams are going to come true......</small>
</div>

<div class="row">
	<table class="table table-hover table-dark">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Year</th>
				<th scope="col">Make</th>
				<th scope="col">Model</th>
				<th scope="col">Likes</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach(Car car in Model.Cars) {
			<tr>
				<td scope="row">@car.Id</td>
				<td>@car.Year</td>
				<td>@car.Make</td>
				<td>@car.Model</td>
				<td>@car.Likes.Count</td>
				<td>
					<form
						class="d-inline-block"
						asp-action="DeleteCar"
						asp-route-id="@car.Id"
						method="post"
					>
						<button class="btn btn-warning">Delete</button>
					</form>
					|
					<a
						class="btn btn-info"
						asp-controller="Home"
						asp-action="Car"
						asp-route-id="@car.Id"
					>
						View
					</a>
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>
